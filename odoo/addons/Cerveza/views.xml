<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--CERVEZA-->
	<record id="cerveza_tree_view" model="ir.ui.view">
		<field name="name">cerveza.tree</field>
		<field name="model">cerveza</field>
		<field name="arch" type="xml">
			<tree string="Cerveza">
				<field name="name"/>
				<field name="tipo"/>
				<field name="precio"/>
				<field name="stock"/>
			</tree>
		</field>
	</record>

	<record id="cerveza_form_view" model="ir.ui.view">
		<field name="name">cerveza.form</field>
		<field name="model">cerveza</field>
		<field name="arch" type="xml">
			<form string="Cerveza">
				<sheet>
					<group>
						<field name="name"/>
						<field name="tipo"/>
						<field name="precio"/>
						<field name="stock"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="cerveza_action" model="ir.actions.act_window">
		<field name="name">Cerveza</field>
		<field name="res_model">cerveza</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="cerveza_menu" name="Cerveza" parent="cerveza_menu" sequence="10"/>
	<menuitem id="cerveza_sub_menu" name="Cerveza" parent="cerveza_menu" action="cerveza_action" sequence="10"/>

